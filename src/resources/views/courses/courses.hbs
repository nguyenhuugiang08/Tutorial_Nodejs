<div class="row">
    {{#each courses}}
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-5">
            <a href="/courses/{{this.slug}}">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.name}}">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text card-description">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>